<% include ./partials/header %>

<!-- blog posts goes here in detail-->
<div class="ui main text container segment">
    <div class="ui header">Edit <%= blog.title %>></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="blog[image]">Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="blog[body]">Body</label>
            <textarea name="blog[body]" id="blogBody" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <button class="ui green basic button" type="submit">Update Blog</button>
    </form>
</div>

<% include ./partials/footer %>