<% include partials/header %>
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">Welcome to YelpCamp</h1>
    <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
    <a class="btn btn-light" href="/campground/new">Add new Campground</a>
  </div>
</div>

<div class="row">
<% campgrounds.forEach((campground) => { %>
<div class="col-md-3 col-sm-6">
	<div class="card" style="width: 20rem;">
	  <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
	  <div class="card-body">
	    <h4 class="card-title"><%= campground.name %></h4>
	    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
	    <a href="#" class="btn btn-primary">Go somewhere</a>
	  </div>
	</div>
</div>
<% }); %>
</div>

<% include partials/footer %>
